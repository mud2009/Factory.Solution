@{
  Layout = "_Layout";
}

<h2>Factory Tracker</h2>

@using Factory.Models
<div class="row">
  <div class="col-6">
    <h3>Engineers</h3>
    @if (ViewBag.AllEngineers.Count == 0)
    {
      <h5>No engineers have been added yet</h5>
    }
      @foreach (Engineer engineer in ViewBag.AllEngineers)
      {
        <p>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</p>
      }
    <p>@Html.ActionLink("Engineers page", "Index", "Engineers")</p> 
  </div>
  <div class="col-6">
    <h3>Machines</h3>
    @if (ViewBag.AllMachines.Count == 0)
    {
      <h5>No machines have been added yet</h5>
    }
      @foreach (Machine machine in ViewBag.AllMachines)
      {
        <p>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</p>
      }
    <p>@Html.ActionLink("Machines page", "Index", "Machines")</p>
  </div>
</div>