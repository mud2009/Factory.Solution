@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Add an Engineer to @Html.DisplayFor(model => model.Name)</h3>

@if (@ViewBag.EngineerCount == 0)
{
  <h5>No engineers to add to this machine</h5>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)
    <div class="form-group">
      @Html.Label("Select category")
      @Html.DropDownList("EngineerId", ViewBag.MachineId, "Select Engineer", new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
  }
}

<p>@Html.ActionLink("Back to list", "Index")</p>
