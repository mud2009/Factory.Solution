@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>@Html.DisplayNameFor(model => model.Name)'s Details</h3>

<h4>Machine's Engineers</h4>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Machines does not have any licensed Engineers</p>
}
else
{
  <ul>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@join.Engineer.Name</li>
  }
</ul>
}

<p>@Html.ActionLink("Add an Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>