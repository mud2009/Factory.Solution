@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h3>Add a machine for @Html.DisplayFor(model => model.Name)</h3>

@if (@ViewBag.MachineCount == 0)
{
  <h5>No machines to add for this engineer</h5>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)
    <div class="form-group">
      @Html.Label("Select category")
      @Html.DropDownList("MachineId", ViewBag.MachineId, "Select Machine", new { @class = "form-control", required = "required"})
    </div>
    <div class="form-group">
      <input type="submit" value="Save" class="btn btn-primary" />
    </div>
  }
}

<p>@Html.ActionLink("Back to list", "Index")</p>
